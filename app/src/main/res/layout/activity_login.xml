<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.sut.cpe17.activity.Login">

    <View
        android:id="@+id/panelLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"
        android:background="#cecece" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/panelLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17.5dp"
        android:text="LOGIN"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/panelLogin"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/panelLogin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/panel_text_view_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorWhite"
            android:padding="2dp">

            <EditText
                android:id="@+id/edit_text_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/edit_text"
                android:drawableLeft="@mipmap/username"
                android:hint="username"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_text_view_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panel_text_view_username"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:padding="2dp">

            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/edit_text"
                android:drawableLeft="@mipmap/password"
                android:hint="password"
                android:maxLength="20" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_text_view_password"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:padding="2dp">

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorGreyDark"
                android:text="Sign in"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
