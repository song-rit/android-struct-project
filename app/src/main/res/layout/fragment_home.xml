<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.sut.cpe17.fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_home_banner_slide"
            android:layout_width="match_parent"
            android:layout_height="150dp"></android.support.v4.view.ViewPager>

        <th.sut.cpe17.util.CirclePageIndicator
            android:layout_marginTop="-15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_pager_home_banner_slide"
            android:id="@+id/indicator_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator_home"
            android:text="Home" />
    </RelativeLayout>


</FrameLayout>
